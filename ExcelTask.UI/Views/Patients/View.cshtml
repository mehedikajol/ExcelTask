@model PatientViewDto

@{
    ViewData["Title"] = "View";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>View patient</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">Patients</a>
                    </li>
                    <li class="breadcrumb-item active">View</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <!-- form start -->
                    <div class="card-body">
                        <div class="form-group">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <label asp-for="Name" class="control-label"></label>
                                </dt>
                                <dd class="col-sm-10">
                                    <input asp-for="Name" class="form-control" readonly />
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="DiseaseName" class="control-label">Disease</label>
                                </dt>
                                <dd class="col-sm-10">
                                    <input asp-for="DiseaseName" class="form-control" readonly />
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="EpilepsyName" class="control-label">Epilepsy</label>
                                </dt>
                                <dd class="col-sm-10">
                                    <input asp-for="EpilepsyName" class="form-control" readonly />
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="NCDs" class="control-label">NCDs</label>
                                </dt>
                                <dd class="col-sm-10 text-capitalize" >
                                    @foreach (var ncd in Model.NCDs)
                                    {
                                        if (Model.NCDs.Last() == ncd)
                                        {
                                            <span>@ncd.NCDName</span>
                                        }
                                        else
                                        {
                                            <span>@ncd.NCDName, </span>
                                        }
                                    }
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="Allergies" class="control-label">Allergies</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @foreach (var allergy in Model.Allergies)
                                    {
                                        if (Model.Allergies.Last() == allergy)
                                        {
                                            <span>@allergy.AllergiesName</span>
                                        }
                                        else
                                        {
                                            <span>@allergy.AllergiesName, </span>
                                        }
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <form asp-action="Delete" method="post">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                                <i class="far fa-edit"></i>Edit
                            </a>
                            <a asp-action="Index" class="btn btn-default">Back to List</a>
                        </form>
                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>